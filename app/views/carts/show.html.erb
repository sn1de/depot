<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart has <%= @cart.line_items.length %> Line Items</h2>
<table>
	<% @cart.line_items.each do |item| %>
		<tr>
			<td><%= item.quantity -%> &times;</td>
			<td><%= item.product.title %></td>
			<td class="item_price"><%= number_to_currency(item.total_price) %></td>
            <td><%= button_to('Remove From Cart', line_item_path(action: :delete, id: item.id), method: :delete, data: { confirm: "Are you sure?" }) %></td>
		</tr>
	<% end %>
	<tr class="total_line">
		<td colspan="3">Total</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
     </tr>
</table>
<%= button_to 'Empty cart', @cart, method: :delete,
    data: { confirm: 'Are you sure?' } %>
<%= link_to 'Continue Shopping', store_index_path %>